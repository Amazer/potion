# via tcp socket
# TODO: sock callbacks

load "debug"

# TODO: parse comma delim args
rdebug = debug class (args):
  /init = (): load "aio".

  /init()
  /port = 8172
  /sock = Aio_tcp
  /read = (): self/sock read.
  /write = (o): self/sock write(o).

  /sock bind("127.0.0.1", self/port)
  /sock listen(1, self connect_cb)
  /sock run
.

rdebug connect_cb = (req, st): .
rdebug read_cb = (req, st): .

debug = rdebug