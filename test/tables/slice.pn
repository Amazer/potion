t = (0,1,2)
t slice(0,nil) say  #=> (0, 1, 2)
t slice(1,nil) say  #=> (1, 2)
t slice(0,1)   say  #=> (0, 1)
t slice(-1,nil) say #=> (2)
t slice(1,1)   say  #=> (1)
t slice(1,-1)  say  #=> (1, 2)
t slice(2,-1)  say  #=> (2)
t slice(-1,-2) say  #=> (1, 2)

t = (0="a", 1="b", 2="c")
t slice say          #=> (0=a, 2=c, 1=b)
t slice((1,2,3)) keys sort(true) say #=> (1, 2)
t slice(()) say      #=> ()
#=> nil
